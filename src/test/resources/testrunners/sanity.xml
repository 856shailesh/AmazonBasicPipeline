<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="TestNG Session Suite" verbose="2" thread-count="1" parallel="tests">
    <listeners>
        <listener
                class-name="com.sk.listener.ExtentReportListener" />
        <listener
                class-name="com.sk.listener.TestAllureListener" />
    </listeners>

    <test name="Amazon Home Page Test">
        <classes>
            <class name="com.sk.test.HomePageTest" />
        </classes>
    </test>
    <test name="Amazon Login Page Test">
        <classes>
            <class name="com.sk.test.LoginPageTest" />
        </classes>
    </test>
</suite>